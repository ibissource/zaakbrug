<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">
    <Adapter name="UpdateHoofdzaak"
        active="${UpdateHoofdzaak.Active}"
        description="">

        <Receiver name="UpdateHoofdzaak">
            <JavaListener name="UpdateHoofdzaak" returnedSessionKeys="Error" />
        </Receiver>

        <Pipeline>
            <Exits>
                <Exit name="EXIT" state="SUCCESS"/>
                <Exit name="EXCEPTION" state="ERROR"/>
            </Exits>

            <XmlIfPipe 
                name="CheckIfZgwDeelzaakHasHoofdzaak"
                xpathExpression="string-length(/ZgwZaak/hoofdzaak) gt 0">
                <Forward name="then" path="CheckIfExistingHoofdzaakSameAsNewHoofdzaak" />
                <Forward name="else" path="LogWarningDeelzaakHasAlreadyNoHoofdzaak" />
            </XmlIfPipe>

            <XmlIfPipe 
                name="CheckIfExistingHoofdzaakSameAsNewHoofdzaak"
                xpathExpression="/ZgwZaak/hoofdzaak = $HoofdzaakUrl">
                <Param name="HoofdzaakUrl" sessionKey="HoofdzaakUrl" />
                <Forward name="then" path="LogWarningAlreadyExistsHoofdzaak" />
                <Forward name="else" path="CreatePatchZaakBody" />
            </XmlIfPipe>

            <SenderPipe
                name="LogWarningDeelzaakHasAlreadyNoHoofdzaak"
                >
                <LogSender
                    name="LogWarningSender"
                    >
                </LogSender>
                <Forward name="success" path="CreatePatchZaakBody" />
            </SenderPipe>

            <SenderPipe
                name="LogWarningAlreadyExistsHoofdzaak"
                >
                <LogSender
                    name="LogWarningSender"
                    >
                </LogSender>
                <Forward name="success" path="EXIT" />
            </SenderPipe>

            <XsltPipe
                name="CreatePatchZaakBody"
                skipEmptyTags="true"
                styleSheetName="CreeerZaak_LK01/xsl/CreateHoofdzaakBody.xsl"
                >
                <Param name="HoofdzaakUrl" sessionKey="HoofdzaakUrl"/>
                <Forward name="success" path="PatchHoofdzaak"/>
            </XsltPipe>

            <SenderPipe
                name="PatchHoofdzaak"
                >
                <IbisLocalSender
                    name="CallUpdateZgwZaakSender"
                    javaListener="Zaken_UpdateZgwZaak"
                    returnedSessionKeys="Error"
                    >
                    <Param name="Url" sessionKey="originalMessage" xpathExpression="/ZgwZaak/url"/>
                </IbisLocalSender>
                <Forward name="success" path="EXIT" />
                <Forward name="exception" path="EXCEPTION" />
            </SenderPipe>

        </Pipeline>
    </Adapter>
</Module>